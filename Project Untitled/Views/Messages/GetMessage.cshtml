@model GetMessageViewModel
@{
    Layout = "_Layout";
}
@if (TempData["message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@TempData["message"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<form asp-action="ReplyMessage" asp-controller="Messages" method="post">
    <input type="hidden" asp-for="Message.Id" />
    <input type="hidden" asp-for="Message.RecipentId" />
    <input type="hidden" asp-for="Message.SenderId" />
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="modal fade" id="newMessageCenter" tabindex="-1" role="dialog" aria-labelledby="ModalCenterMessage" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModalCenterMessage">New Message</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row mx-md-n5">
                        <div class="col px-md-5">
                            <div class="form-group p-3 border bg-light">
                                <p>Reply to : <input type=text readonly class="form-control" id="staticRecipient" asp-for="@Model.Message.SenderUserName" /></p>
                                <p>Topic : <input type=text readonly class="form-control" id="staticTitle" asp-for="@Model.Message.Title" /></p>
                            </div>
                        </div>
                    </div>
                    <div class="row mx-md-n5">
                        <div class="col px-md-5">
                            <div class="form-group p-3 border bg-light">
                                <label asp-for="NewMessage.Message"></label>
                                <div><span asp-validation-for="NewMessage.Message" class="text-danger"></span></div>
                                <textarea asp-for="NewMessage.Message" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Reply</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="d-flex p-2 bd-highlight">
    <div class="d-flex flex-row bd-highlight mb-3">
        <span>Title : @Model.Message.Title</span>
    </div>
    <div class="d-flex flex-row bd-highlight mb-3">
        <span>From : @Model.Message.SenderUserName</span>
    </div>
    <div class="d-flex flex-row bd-highlight mb-3">
        <span>@Model.Message.Message</span>
    </div>
    <div class="d-flex flex-row bd-highlight mb-3">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newMessageCenter">
            Reply to Message
        </button>
        <a asp-action="DeleteMessage" asp-controller="Messages" asp-route-messageId="@Model.Message.Id" class="btn btn-danger" role="button">Delete Message</a>
    </div>
</div>