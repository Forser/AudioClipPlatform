@model NotificationsViewModel
    
<div class="is-danger" asp-validation-summary="All"></div>
<form asp-action="UpdateNotifications" asp-controller="Settings" method="post">
    <input type="hidden" asp-for="Id" />
    <table class="table is-fullwidth is-hoverable">
        <thead>
            <tr>
                <th>Notifications</th>
                <th>Device</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>New Follower</td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.NewFollowerDevice" />
                </td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.NewFollowerEmail" />
                </td>
            </tr>
            <tr>
                <td>Repost Of Your Clip</td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.RepostOfPostDevice" />
                </td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.RepostOfPostEmail" />
                </td>
            </tr>
            <tr>
                <td>New Clip By Followed Member</td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.NewPostByFollowedUserDevice" />
                </td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.NewPostByFollowedUserEmail" />
                </td>
            </tr>
            <tr>
                <td>Thumbs Up On Your Clip</td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.LikeOnYourPostDevice" />
                </td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.LikeOnYourPostEmail" />
                </td>
            </tr>
            <tr>
                <td>Comment On Your Clip</td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.CommentOnYourPostDevice" />
                </td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.CommentOnYourPostEmail" />
                </td>
            </tr>
            <tr>
                <td>Suggested Content</td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.SuggestedContentDevice" />
                </td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.SuggestedContentEmail" />
                </td>
            </tr>
            <tr>
                <td>New Message</td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.NewMessageDevice" />
                </td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.NewMessageEmail" />
                </td>
            </tr>
        </tbody>
    </table>
    <table class="table is-fullwidth is-hoverable">
        <thead>
            <tr>
                <th>Updates from AudioClips</th>
                <th>Device</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>New AudioClips Feature</td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.NewFeatureDevice" />
                </td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.NewFeatureEmail" />
                </td>
            </tr>
            <tr>
                <td>Survey / Feedback</td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.SurveyAndFeedbackDevice" />
                </td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.SurveyAndFeedbackEmail" />
                </td>
            </tr>
            <tr>
                <td>AudioClips Tips &Aacute; Offers</td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.TipsAndOffersDevice" />
                </td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.TipsAndOffersEmail" />
                </td>
            </tr>
            <tr>
                <td>AudioClips Newsletter</td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.NewsLetterDevice" />
                </td>
                <td>
                    <input class="checkbox" type="checkbox" asp-for="@Model.NewsLetterEmail" />
                </td>
            </tr>
        </tbody>
    </table>
    <div class="text-center">
        <button class="button is-primary" type="submit">Update Notifications</button>
    </div>
</form>