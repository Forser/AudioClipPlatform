@model UserViewModel

<div class="text-danger" asp-validation-summary="All"></div>
@if (Model != null)
{
    <div class="row">
        <div class="col">
            <p class="text-left">Username : @Model.UserName</p>
        </div>
        <div class="col">
            <p class="text-left">Email Address : @Model.Email</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p class="left text"><a asp-action="UploadProfileImage" asp-controller="Settings" class="btn btn-primary" role="button">Upload new Profile Image</a></p>
        </div>
        <div class="col">
            @if(Model.ProfileImage != null)
            {
                <img src="~/img/profileimg/@Model.ProfileImage" />
            }
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a asp-action="ChangePassword" asp-controller="Account" class="btn btn-primary" role="button">Change Password</a>
        </div>
        <div class="col">
            <a asp-action="DeleteAccount" asp-controller="Account" class="btn btn-danger" role="button">Delete Your Account</a>
        </div>
    </div>
}