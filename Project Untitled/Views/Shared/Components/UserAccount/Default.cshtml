@model UserViewModel

@if (Model != null)
{
    <div class="row">
        <div class="col">
            <p class="text-left">Username : @Model.IdentityUser.UserName</p>
        </div>
        <div class="col">
            <p class="text-left">Email Address : @Model.IdentityUser.Email</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
        </div>
        <div class="col">

        </div>
    </div>
    <div class="row">
        <div class="col">
            <a asp-action="ChangePassword" asp-controller="Account" class="btn btn-primary" role="button">Change Password</a>
        </div>
        <div class="col">
            <a asp-action="DeleteAccount" asp-controller="Account" class="btn btn-danger" role="button">Delete Your Account</a>
        </div>
    </div>
}