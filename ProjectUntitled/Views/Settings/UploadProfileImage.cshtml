@model NewProfileImageView
@{
    Layout = "_Layout";
}

<section class="section">
    <form method="post" enctype="multipart/form-data" asp-controller="Settings" asp-action="UploadProfileImage" acc>
        <div class="field">
            <div class="file has-name">
                <label class="file-label">
                    <input class="file-input" type="file" accept="image/jpeg,image/gif,image/png" id="formFile" name="formFile" data-val="true" data-val-required="Select a file to upload" />
                    <span class="file-cta">
                        <span class="file-icon">
                            <i class="fas fa-upload"></i>
                        </span>
                        <span class="file-label">
                            Choose a image...
                        </span>
                    </span>
                    <span class="file-name" id="filename"></span>
                    <span asp-validation-for="formFile" class="has-text-danger"></span>
                </label>
            </div>
        </div>
        <div class="field">
            <div class="control">
                <input type="submit" class="button is-link" value="Upload" />
            </div>
        </div>
    </form>
</section>

<script type="text/javascript">
    var file = document.getElementById("formFile");
    file.onchange = function () {
        if (file.files.length > 0) {
            document.getElementById('filename').innerHTML = file.files[0].name;
        }
    };
</script>
